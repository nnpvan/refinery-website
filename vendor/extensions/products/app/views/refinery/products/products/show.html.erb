<section id="body_content">
    <section id="body">
        <div id="product">
            <%= image_fu @product.photo, "400x400", class: "image-align-left" %>
            <h1><%=raw @product.name %></h1>
            <p>S$<%=raw @product.price %></p>
            <p><%=raw @product.description %></p>
            <%= link_to "Shop now", @product.link %>
            <br>
            <%= link_to "Back to Products", refinery.products_products_path %>
        </div>
    </section>
</section>