<%= render '/refinery/content_page' %>

<section id="body_content">
    <section id="body">
        <div id="products">
            <% @products.each do |product| %> 
                <div class="product">
                    <div>
                        <%= image_fu product.photo, "200x200", class: "image-align-left" %>  
                    </div>
                    <div>
                        <h3><%=raw product.name %></h3>
                        <p>S$<%=raw product.price %></p>
                        <p><%=raw product.description %></p>
                        <%= link_to "More information", refinery.products_product_path(product) %>
                    </div>
                </div>
            <% end %>
        </div>
    </section>
</section>